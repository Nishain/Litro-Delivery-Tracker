<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:gravity="bottom|right"
        android:bottom="0dp" android:right="0dp">
        <shape android:shape="oval">
            <solid android:color="@color/transparentBubbleColor" />
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
    <item android:gravity="bottom|right"
        android:bottom="80dp" android:right="20dp">
        <shape android:shape="oval">
            <solid android:color="@color/transparentBubbleColor" />
            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>
    </item>
    <item android:gravity="bottom|right"
        android:bottom="0dp" android:right="70dp">
        <shape android:shape="oval">
            <solid android:color="@color/transparentBubbleColor" />
            <size
                android:width="70dp"
                android:height="70dp" />
        </shape>
    </item>
</layer-list>