<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="103dp"
        android:layout_height="106dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/white_circle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_border"
        android:orientation="vertical"
        tools:context=".LockScreenPopup">

        <TextView
            android:id="@+id/customerNumberHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"
            android:text="Customer Calling you"
            android:textColor="@android:color/black" />

        <View
            android:id="@+id/divider"
            android:layout_width="261dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/customerAddressHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="from address"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <ImageView
        android:id="@+id/statusIcon"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:src="@drawable/litro_icon"
        app:srcCompat="@drawable/litro_icon" />
</FrameLayout>
