<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/white_rec"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:background="@drawable/white_bubbles"
        android:src="@drawable/credit_profile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created By Nishain De Silva"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="252dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/credit_content"
        android:textColor="@android:color/black" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/endCredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cool!"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
</LinearLayout>